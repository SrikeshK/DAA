#include <iostream>

int main() {
    int nums[] = {2, 7, 11, 15};
    int target = 9;
    int length = sizeof(nums) / sizeof(nums[0]);
    int result[2];

    for (int i = 0; i < length; ++i) {
        for (int j = i + 1; j < length; ++j) {
            if (nums[i] + nums[j] == target) {
                result[0] = i;
                result[1] = j;
                std::cout << "Indices: [" << result[0] << ", " << result[1] << "]\n";
                return 0; 
            }
        }
    }

    std::cout << "No solution found!\n";
    return 0;
}
